<h2> Lista de Categorias: </h2>
<hr>
<a href="/admin/categorias/criar"><button class="btn btn-success">Nova Categoria </button></a>
<br>

{{#each categorias}}
<br>
<div class="card">
  <div class="card-body mt-4">
    <h4>{{name}}</h4>
    <small>{{slug}}</small><br>
    <small>{{date}}</small><br>
    <a href="/admin/editcategorias/edit/{{_id}}"><button class="btn btn-success mt-4">Editar</button></a>
  </div>
</div>
{{else}}

{{/each}}
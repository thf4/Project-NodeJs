<h2> Lista de Postagens: </h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-success mt-3" >Nova Postagem </button></a>
<br>

{{#each postagens}}
<br>
<div class="card">
  <div class="card-body">
    <h4>{{titulo}}</h4>
    <p>Descrição: {{descricao}}</p>
    <small>Data: {{date}}</small><br>
    <small>Categoria: {{categoria.name}}</small><br>
    <a href="/postagens/edit/{{_id}}" class="btn btn-success mt-2">Editar Postagem</a>
    <form action="/admin/postagens/deletar" method="POST">
      <input type="hidden" name="id" value="{{_id}}">
      <button type="submit" class="btn btn-danger mt-1"> Deletar Postagem</button>
    </form>
  </div>
</div>
{{else}}
<p> Nenhuma postagem registrada </p>

{{/each}}
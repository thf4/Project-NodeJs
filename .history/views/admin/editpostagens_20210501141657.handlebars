{{#each erros}}
    <div class="alert alert-danger">{{text}}</div>
{{else}}

{{/each}}

<div class="card">
  <div class="card-body">
    <h4> Edit Postagem: </h4>
    <form action="/admin/postagens/edit" method="POST" >
      <label for="titulo">Título: </label>
      <input type="text" name="titulo" class="form-control" value="{{postagens.titulo}}" required>
      <label for="slug">Slug: </label>
      <input type="text" name="slug" class="form-control">
      <label for="descricao">Descrição: </label>
      <input type="text" name="descricao" class="form-control" required>
      <label for="conteudo">Conteudo: </label>
      <textarea name="conteudo" class="form-control" required></textarea>
      <label for="categoria">Categoria: </label>
      <select name="categoria" class="form-select">
        {{#each categorias}}
        <option value="{{_id}}">{{name}}</option>
        {{else}}
        <option value="0">Nenhuma categoria registrada</option>
        {{/each}}
      </select>
      <button class="btn btn-success mt-4" type="submit"> Edit Postagem </button>
    </form>
  </div>
</div>
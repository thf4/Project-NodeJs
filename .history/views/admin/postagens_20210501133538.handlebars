<h2> Lista de Postagens: </h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-success">Nova Postagem </button></a>
<br>

{{#each postagens}}
<div class="card">
  <div class="card-body">
    <h4>{{titulo}}</h4>
    <p>Descrição: {{descricao}}</p>
    <small>Data: {{date}}</small><br>
    <small>Categoria: {{categoria.name}}</small>
    <form action="/admin/categorias/deletar" method="POST">
      <input type="hidden" name="id" value="{{_id}}">
      <button type="submit" class="btn btn-danger"> Deletar Categoria</button>
    </form>
  </div>
</div>
{{else}}
<p> Nenhuma postagem registrada </p>

{{/each}}